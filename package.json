{
  "name": "@meltwater/makenew-serverless-nodejs",
  "version": "0.2.1",
  "description": "Package skeleton for a Node.js Serverless project on AWS Lambda.",
  "main": "index.js",
  "module": "lib/index.js",
  "sideEffects": false,
  "keywords": [
    "node"
  ],
  "homepage": "https://github.com/meltwater/makenew-serverless-nodejs",
  "bugs": "https://github.com/meltwater/makenew-serverless-nodejs/issues",
  "repository": "meltwater/makenew-serverless-nodejs",
  "license": "SEE LICENSE IN LICENSE.txt",
  "author": {
    "name": "Evan Sosenko",
    "email": "evan.sosenko@meltwater.com"
  },
  "files": [
    "yarn.lock",
    "index.js",
    "lib",
    "handlers",
    "data",
    "docs"
  ],
  "scripts": {
    "test": "nyc ava",
    "pretest": "npm-run-all lint",
    "posttest": "serverless package",
    "test:update": "ava --update-snapshots",
    "test:watch": "ava --watch",
    "test:inspect": "node --inspect node_modules/ava/profile",
    "test:inspect:watch": "nodemon --inspect node_modules/ava/profile",
    "lint": "standard",
    "preversion": "npm-run-all test",
    "postversion": "git push && git push --tags",
    "deploy": "serverless deploy --aws-s3-accelerate",
    "release:staging": ".drone/deploy.sh staging",
    "release:production": ".drone/deploy.sh production",
    "example": "node examples",
    "example:watch": "nodemon --exec node examples",
    "example:inspect": "node --inspect examples",
    "example:inspect:watch": "nodemon --exec node --inspect examples",
    "offline": "serverless offline",
    "pretty": "prettier --ignore-path .gitignore --write '**/*.(js|json|graphql)'",
    "format": "npm-run-all --serial pretty format:*",
    "format:js": "standard --fix",
    "report": "nyc report"
  },
  "ava": {
    "files": [
      "**/*.spec.js",
      "!package/**/*"
    ],
    "require": [
      "esm"
    ]
  },
  "nyc": {
    "exclude": [
      "**/index.js",
      "package/**/*.js",
      "examples/**/*.js",
      "**/*.spec.js"
    ],
    "reporter": [
      "html",
      "lcov",
      "text"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.spec.js",
      "test/",
      "tmp/"
    ]
  },
  "engines": {
    "node": ">=12.13.0"
  },
  "resolutions": {
    "aws-sdk": "2.631.0"
  },
  "dependencies": {
    "esm": "^3.2.25"
  },
  "devDependencies": {
    "@meltwater/examplr": "^4.2.0",
    "ava": "^3.3.0",
    "aws-sdk": "2.631.0",
    "del-cli": "^3.0.0",
    "eslint": "^7.4.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.0",
    "nodemon": "^2.0.1",
    "npm-run-all": "^4.1.2",
    "nyc": "^15.0.0",
    "prettier": "^2.0.2",
    "serverless": "^1.58.0",
    "serverless-offline": "^6.1.2",
    "standard": "^14.3.1"
  }
}
